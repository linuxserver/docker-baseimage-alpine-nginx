#!/usr/bin/with-contenv bash

# make our folders
mkdir -p \
	/config/{nginx/site-confs,www,log/nginx,keys/self-signed} \
	/run \
	/var/lib/nginx/tmp/client_body

# copy config files
[[ ! -f /config/nginx/nginx.conf ]] && \
	cp /defaults/nginx.conf /config/nginx/nginx.conf
[[ ! -f /config/nginx/nginx-fpm.conf ]] && \
	cp /defaults/nginx-fpm.conf /config/nginx/nginx-fpm.conf
[[ ! -f /config/nginx/site-confs/default ]] && \
	cp /defaults/default /config/nginx/site-confs/default
[[ $(find /config/www -type f | wc -l) -eq 0 ]] && \
	cp /defaults/index.html /config/www/index.html
cp /config/nginx/nginx-fpm.conf /etc/php5/php-fpm.conf

# fix timezone in php.ini
sed -i "s#date.timezone = .*#date.timezone = $TZ#g" /etc/php5/php.ini

# permissions
chown -R abc:abc \
	/config \
	/run \
	/var/lib/nginx
